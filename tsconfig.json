{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./app",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "isolatedModules": true
  },
  "include": ["app/**/*.ts", "app/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
